<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stripe Payment Links</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-link me-2"></i>
                Stripe Payment Links
            </a>
            <% if (user) { %>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i>
                        <%= user.name %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/payment/create">
                            <i class="fas fa-plus me-2"></i>Create Payment Link
                        </a></li>
                        <li><a class="dropdown-item" href="/payment/links">
                            <i class="fas fa-list me-2"></i>My Links
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/auth/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-list me-2"></i>
                My Payment Links
            </h2>
            <a href="/payment/create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>
                Create New Link
            </a>
        </div>

        <% if (paymentLinks && paymentLinks.length > 0) { %>
            <div class="row">
                <% paymentLinks.forEach(function(link) { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="fas fa-link me-2"></i>
                                    <%= link.metadata && link.metadata.name ? link.metadata.name : 'Payment Link' %>
                                </h6>
                                <span class="badge bg-<%= link.active ? 'success' : 'secondary' %>">
                                    <%= link.active ? 'Active' : 'Inactive' %>
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Payment Link:</label>
                                    <div class="input-group">
                                        <input 
                                            type="text" 
                                            class="form-control form-control-sm" 
                                            value="<%= link.url %>" 
                                            readonly
                                        >
                                        <button 
                                            class="btn btn-outline-primary btn-sm" 
                                            type="button" 
                                            onclick="copyToClipboard('<%= link.url %>', this)"
                                        >
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="text-muted small">Created</div>
                                        <div class="fw-bold">
                                            <%= new Date(link.created * 1000).toLocaleDateString() %>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-muted small">ID</div>
                                        <div class="fw-bold text-truncate" title="<%= link.id %>">
                                            <%= link.id.substring(0, 8) %>...
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex gap-2">
                                    <a 
                                        href="<%= link.url %>" 
                                        target="_blank" 
                                        class="btn btn-primary btn-sm flex-fill"
                                    >
                                        <i class="fas fa-external-link-alt me-1"></i>
                                        Test Link
                                    </a>
                                    <button 
                                        class="btn btn-outline-secondary btn-sm" 
                                        onclick="showLinkDetails('<%= link.id %>', '<%= link.url %>')"
                                    >
                                        <i class="fas fa-info"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <div class="text-muted mb-4">
                    <i class="fas fa-link fa-3x"></i>
                </div>
                <h4 class="text-muted">No payment links yet</h4>
                <p class="text-muted">Create your first payment link to get started</p>
                <a href="/payment/create" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>
                    Create Your First Link
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Link Details Modal -->
<div class="modal fade" id="linkDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>
                    Payment Link Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Link ID:</label>
                    <input type="text" class="form-control" id="modalLinkId" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Payment URL:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="modalLinkUrl" readonly>
                        <button class="btn btn-outline-primary" type="button" onclick="copyToClipboard(document.getElementById('modalLinkUrl').value, this)">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" id="modalTestLink" target="_blank" class="btn btn-primary">Test Link</a>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard(text, button) {
    const tempInput = document.createElement('input');
    tempInput.value = text;
    document.body.appendChild(tempInput);
    tempInput.select();
    tempInput.setSelectionRange(0, 99999);
    
    try {
        document.execCommand('copy');
        const originalHTML = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check"></i>';
        button.classList.remove('btn-outline-primary');
        button.classList.add('btn-success');
        
        setTimeout(() => {
            button.innerHTML = originalHTML;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-primary');
        }, 2000);
    } catch (err) {
        console.error('Failed to copy: ', err);
    }
    
    document.body.removeChild(tempInput);
}

function showLinkDetails(linkId, linkUrl) {
    document.getElementById('modalLinkId').value = linkId;
    document.getElementById('modalLinkUrl').value = linkUrl;
    document.getElementById('modalTestLink').href = linkUrl;
    
    const modal = new bootstrap.Modal(document.getElementById('linkDetailsModal'));
    modal.show();
}
</script>
    </main>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">
                <i class="fas fa-shield-alt me-1"></i>
                Secure payment processing powered by Stripe
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
