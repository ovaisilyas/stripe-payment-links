<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stripe Payment Links</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-link me-2"></i>
                Stripe Payment Links
            </a>
            <% if (user) { %>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i>
                        <%= user.name %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/payment/create">
                            <i class="fas fa-plus me-2"></i>Create Payment Link
                        </a></li>
                        <li><a class="dropdown-item" href="/payment/links">
                            <i class="fas fa-list me-2"></i>My Links
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/auth/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-success shadow">
            <div class="card-header bg-success text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-check-circle me-2"></i>
                    Payment Link Created Successfully!
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-success">
                    <i class="fas fa-info-circle me-2"></i>
                    Your payment link has been generated and is ready to use.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            Link Details
                        </h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Product:</strong></td>
                                <td><%= paymentLink.name %></td>
                            </tr>
                            <tr>
                                <td><strong>Amount:</strong></td>
                                <td>$<%= paymentLink.amount %> <%= paymentLink.currency.toUpperCase() %></td>
                            </tr>
                            <tr>
                                <td><strong>Status:</strong></td>
                                <td>
                                    <span class="badge bg-<%= paymentLink.active ? 'success' : 'secondary' %>">
                                        <%= paymentLink.active ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Created:</strong></td>
                                <td><%= new Date(paymentLink.created * 1000).toLocaleString() %></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-link me-2"></i>
                            Payment Link
                        </h5>
                        <div class="input-group mb-3">
                            <input 
                                type="text" 
                                class="form-control" 
                                id="paymentLink" 
                                value="<%= paymentLink.url %>" 
                                readonly
                            >
                            <button 
                                class="btn btn-outline-primary" 
                                type="button" 
                                id="copyButton"
                                onclick="copyToClipboard()"
                            >
                                <i class="fas fa-copy me-1"></i>
                                Copy
                            </button>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a 
                                href="<%= paymentLink.url %>" 
                                target="_blank" 
                                class="btn btn-primary"
                            >
                                <i class="fas fa-external-link-alt me-2"></i>
                                Test Payment Link
                            </a>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row">
                    <div class="col-md-6">
                        <a href="/payment/create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>
                            Create Another Link
                        </a>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/payment/links" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>
                            View All Links
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Usage Instructions -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-question-circle me-2"></i>
                    How to use your payment link
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="text-primary mb-2">
                            <i class="fas fa-share-alt fa-2x"></i>
                        </div>
                        <h6>Share the Link</h6>
                        <p class="text-muted small">Copy and share the payment link with your customers via email, social media, or embed it on your website.</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="text-success mb-2">
                            <i class="fas fa-credit-card fa-2x"></i>
                        </div>
                        <h6>Customers Pay</h6>
                        <p class="text-muted small">Customers click the link and complete their payment using any major credit card or digital wallet.</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="text-info mb-2">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h6>Track Payments</h6>
                        <p class="text-muted small">Monitor your payments and transactions through your Stripe dashboard.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </main>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">
                <i class="fas fa-shield-alt me-1"></i>
                Secure payment processing powered by Stripe
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>

<script>
function copyToClipboard() {
    const paymentLink = document.getElementById('paymentLink');
    const copyButton = document.getElementById('copyButton');
    
    paymentLink.select();
    paymentLink.setSelectionRange(0, 99999); // For mobile devices
    
    try {
        document.execCommand('copy');
        copyButton.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
        copyButton.classList.remove('btn-outline-primary');
        copyButton.classList.add('btn-success');
        
        setTimeout(() => {
            copyButton.innerHTML = '<i class="fas fa-copy me-1"></i>Copy';
            copyButton.classList.remove('btn-success');
            copyButton.classList.add('btn-outline-primary');
        }, 2000);
    } catch (err) {
        console.error('Failed to copy: ', err);
    }
}
</script>
